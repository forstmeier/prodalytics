#!/bin/bash

/bin/bash ./bin/build_lambdas

cp etc/scripts/start_app .
cp etc/creds/creds.json .

CONFIG_DOCUMENT=$( jq -n \
'{
	"todoist": {
		"api_token": "REPLACE",
		"client_secret": "REPLACE"
	}
}'
)

echo $CONFIG_DOCUMENT > config.json

zip release.zip events.zip start_app cft.yaml config.json creds.json

rm events.zip start_app config.json creds.json